<!DOCTYPE html>
<html class="light" dir="<%= locale === 'ar' ? 'rtl' : 'ltr' %>" lang="<%= locale %>">

<head>
    <%- include('../../partials/head') %>
</head>

<body
    class="bg-background-light dark:bg-background-dark text-[#181113] dark:text-white transition-colors duration-200 noise-bg min-h-screen flex items-center justify-center p-4">
    <div
        class="w-full max-w-5xl h-[80vh] min-h-[600px] grid lg:grid-cols-2 rounded-[3rem] overflow-hidden shadow-premium glass border border-white/20 dark:border-white/5 animate-scale-in">

        <!-- Left Side: Brand Side -->
        <div class="hidden lg:flex flex-col justify-between p-16 gradient-bg relative overflow-hidden text-white">
            <div
                class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/clean-gray-paper.png')]">
            </div>
            <div class="absolute -top-32 -right-32 size-64 bg-white/10 rounded-full blur-3xl animate-pulse"></div>

            <div class="relative z-10">
                <a href="/"
                    class="inline-flex items-center gap-4 bg-white/20 p-5 rounded-[2rem] backdrop-blur-2xl border border-white/20 mb-16 hover:bg-white/30 transition-all btn-bounce">
                    <span class="material-symbols-outlined filled text-4xl">diamond</span>
                    <span class="font-black text-3xl tracking-tight">كوافير</span>
                </a>
            </div>

            <div class="relative z-10">
                <h2 class="text-6xl font-black leading-tight mb-8">هل نسيتِ <br> <span class="opacity-80">كلمة
                        السر؟</span></h2>
                <p class="text-white/80 text-xl font-bold max-w-xs leading-relaxed">لا تقلقي، سنوفر لكِ رابطاً لإعادة
                    تعيينها في غضون لحظات.</p>
            </div>

            <div
                class="relative z-10 flex items-center gap-5 bg-white/10 p-6 rounded-[2rem] backdrop-blur-md border border-white/10">
                <div class="size-14 bg-white rounded-2xl flex items-center justify-center text-primary shadow-xl">
                    <span class="material-symbols-outlined text-3xl">lock_reset</span>
                </div>
                <div>
                    <p class="font-black text-xl">أمانكِ أولويتنا</p>
                    <p class="text-xs text-white/60 uppercase tracking-widest mt-1">حماية تامة لبياناتكِ</p>
                </div>
            </div>
        </div>

        <!-- Right Side: Form Side -->
        <div class="p-12 lg:p-16 flex flex-col justify-center relative bg-white dark:bg-[#12080a] overflow-hidden">
            <div class="absolute top-10 left-10">
                <%- include('../../partials/theme-toggle') %>
            </div>

            <!-- Tabs Toggle -->
            <div class="flex p-1 bg-gray-100 dark:bg-white/5 rounded-2xl mb-10 w-full animate-slide-up">
                <button onclick="switchTab('email')" id="emailTab"
                    class="flex-1 py-3 px-4 rounded-xl font-black text-sm transition-all bg-white dark:bg-[#1a0c10] shadow-sm text-primary">بالبريد
                    الإلكتروني</button>
                <button onclick="switchTab('recovery')" id="recoveryTab"
                    class="flex-1 py-3 px-4 rounded-xl font-black text-sm transition-all text-[#896170]">بمفتاح
                    الاستعادة</button>
            </div>

            <!-- Email Form -->
            <form action="/forgot-password" method="POST" class="space-y-10 animate-slide-up" id="emailForm">
                <div class="space-y-4">
                    <label for="email" class="text-xs font-black uppercase text-[#896170] mr-2">البريد
                        الإلكتروني</label>
                    <div class="group relative">
                        <span
                            class="material-symbols-outlined absolute right-6 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-all duration-300 text-2xl">mail</span>
                        <input type="email" id="email" name="email" required
                            class="w-full h-18 pr-16 pl-6 rounded-2xl border-2 border-gray-50 dark:border-[#2d1a22] bg-gray-50/50 dark:bg-[#1a0c10] focus:border-primary/50 focus:bg-white dark:focus:bg-[#2d1a22] transition-all outline-none font-bold text-lg text-left"
                            placeholder="name@example.com">
                    </div>
                </div>
                <button type="submit"
                    class="w-full h-18 gradient-bg text-white rounded-[2rem] font-black text-2xl shadow-2xl shadow-primary/30 btn-bounce shimmer">
                    <span>إرسال رابط الاستعادة</span>
                </button>
            </form>

            <!-- Recovery Key Form -->
            <form action="/recovery-reset" method="POST" class="hidden space-y-8 animate-fade-in" id="recoveryForm">
                <div class="space-y-5">
                    <div class="space-y-2">
                        <label class="text-xs font-black uppercase text-[#896170] mr-2">رقم الهاتف</label>
                        <div class="group relative">
                            <span
                                class="material-symbols-outlined absolute right-6 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-primary text-2xl">phone_iphone</span>
                            <input type="text" name="phone" required
                                class="w-full h-16 pr-16 pl-6 rounded-2xl border-2 border-gray-50 dark:border-[#2d1a22] bg-gray-50/50 dark:bg-[#1a0c10] transition-all outline-none font-bold text-lg"
                                placeholder="01xxxxxxxxx">
                        </div>
                    </div>
                    <div class="space-y-2">
                        <label class="text-xs font-black uppercase text-[#896170] mr-2">مفتاح الاستعادة (Unique
                            Key)</label>
                        <div class="group relative">
                            <span
                                class="material-symbols-outlined absolute right-6 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-primary text-2xl">key</span>
                            <input type="text" name="recoveryKey" required
                                class="w-full h-16 pr-16 pl-6 rounded-2xl border-2 border-gray-50 dark:border-[#2d1a22] bg-gray-50/50 dark:bg-[#1a0c10] transition-all outline-none font-bold text-lg text-left"
                                placeholder="A1B2C3D4E5">
                        </div>
                    </div>
                    <div class="space-y-2">
                        <label class="text-xs font-black uppercase text-[#896170] mr-2">كلمة المرور الجديدة</label>
                        <div class="group relative">
                            <span
                                class="material-symbols-outlined absolute right-6 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-primary text-2xl">lock</span>
                            <input type="password" name="newPassword" required
                                class="w-full h-16 pr-16 pl-6 rounded-2xl border-2 border-gray-50 dark:border-[#2d1a22] bg-gray-50/50 dark:bg-[#1a0c10] transition-all outline-none font-bold text-lg"
                                placeholder="••••••••">
                        </div>
                    </div>
                    <div class="space-y-2">
                        <label class="text-xs font-black uppercase text-[#896170] mr-2">تأكيد كلمة المرور</label>
                        <div class="group relative">
                            <span
                                class="material-symbols-outlined absolute right-6 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-primary text-2xl">lock</span>
                            <input type="password" name="confirmPassword" required
                                class="w-full h-16 pr-16 pl-6 rounded-2xl border-2 border-gray-50 dark:border-[#2d1a22] bg-gray-50/50 dark:bg-[#1a0c10] transition-all outline-none font-bold text-lg"
                                placeholder="••••••••">
                        </div>
                    </div>
                </div>
                <button type="submit"
                    class="w-full h-18 gradient-bg text-white rounded-[2rem] font-black text-2xl shadow-2xl shadow-primary/30 btn-bounce shimmer">
                    <span>تغيير كلمة السر</span>
                </button>
            </form>

            <div class="mt-16 text-center animate-slide-up" style="animation-delay: 200ms">
                <a href="/login"
                    class="text-[#896170] dark:text-gray-400 font-black hover:text-primary transition-colors flex items-center justify-center gap-3 group">
                    <span
                        class="material-symbols-outlined group-hover:translate-x-2 transition-transform">arrow_forward</span>
                    <span>العودة لتسجيل الدخول</span>
                </a>
            </div>
        </div>
    </div>

    <script>
        function switchTab(type) {
            const emailForm = document.getElementById('emailForm');
            const recoveryForm = document.getElementById('recoveryForm');
            const emailTab = document.getElementById('emailTab');
            const recoveryTab = document.getElementById('recoveryTab');

            if (type === 'email') {
                emailForm.classList.remove('hidden');
                recoveryForm.classList.add('hidden');
                emailTab.classList.add('bg-white', 'dark:bg-[#1a0c10]', 'shadow-sm', 'text-primary');
                emailTab.classList.remove('text-[#896170]');
                recoveryTab.classList.remove('bg-white', 'dark:bg-[#1a0c10]', 'shadow-sm', 'text-primary');
                recoveryTab.classList.add('text-[#896170]');
            } else {
                emailForm.classList.add('hidden');
                recoveryForm.classList.remove('hidden');
                recoveryTab.classList.add('bg-white', 'dark:bg-[#1a0c10]', 'shadow-sm', 'text-primary');
                recoveryTab.classList.remove('text-[#896170]');
                emailTab.classList.remove('bg-white', 'dark:bg-[#1a0c10]', 'shadow-sm', 'text-primary');
                emailTab.classList.add('text-[#896170]');
            }
        }

        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function (e) {
                const btn = this.querySelector('button[type="submit"]');
                btn.disabled = true;
                btn.innerHTML = '<span class="material-symbols-outlined animate-spin">sync</span> جاري التنفيذ...';
            });
        });
    </script>
</body>

</html>