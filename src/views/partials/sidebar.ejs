<!-- Notifications Modal -->
<div id="notificationsModal"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[70] hidden items-center justify-center p-4">
    <div
        class="bg-white dark:bg-[#2d1a22] rounded-2xl max-w-md w-full p-0 overflow-hidden shadow-2xl animate-scale-in relative">
        <div class="p-6 border-b border-[#e6dbdf] dark:border-[#3d252e] flex items-center justify-between bg-primary/5">
            <div class="flex items-center gap-2">
                <h2 class="text-xl font-bold">الإشعارات</h2>
                <% if (typeof unreadNotificationsCount !=='undefined' && unreadNotificationsCount> 0) { %>
                    <span class="bg-primary text-white text-[10px] px-2 py-0.5 rounded-full">
                        <%= unreadNotificationsCount %>
                    </span>
                    <% } %>
            </div>
            <div class="flex items-center gap-2">
                <% if (typeof unreadNotificationsCount !=='undefined' && unreadNotificationsCount> 0) { %>
                    <button onclick="markAllNotificationsAsRead()"
                        class="text-[10px] text-primary hover:underline font-bold">تحديد الكل كمقروء</button>
                    <% } %>
                        <button onclick="closeNotifications()"
                            class="p-2 hover:bg-white/50 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-sm">close</span>
                        </button>
            </div>
        </div>

        <div class="max-h-[60vh] overflow-y-auto p-4 space-y-3">
            <% if (locals.notifications && locals.notifications.length> 0) { %>
                <% locals.notifications.forEach(notification=> { %>
                    <div
                        class="p-4 rounded-xl border dark:border-[#3d252e] <%= notification.is_read ? 'bg-white dark:bg-[#1a0c10] border-[#e6dbdf]' : 'bg-blue-50 dark:bg-blue-900/5 border-blue-300 shadow-sm' %> transition-all">
                        <div class="flex items-start gap-3">
                            <div
                                class="p-2 rounded-lg <%= notification.type === 'error' ? 'bg-red-50 text-red-500' : 'bg-primary/10 text-primary' %>">
                                <span class="material-symbols-outlined text-lg">
                                    <%= notification.type==='error' ? 'block' : 'notifications' %>
                                </span>
                            </div>
                            <div class="flex-1">
                                <div class="flex items-center justify-between mb-1">
                                    <h4 class="font-bold text-sm">
                                        <%= notification.title %>
                                    </h4>
                                    <div class="flex items-center gap-2">
                                        <% if (!notification.is_read) { %>
                                            <div class="h-2 w-2 bg-primary rounded-full"></div>
                                            <% } %>
                                                <button onclick="deleteNotification('<%= notification.id %>')"
                                                    class="p-1 hover:bg-gray-100 dark:hover:bg-[#3d252e] rounded text-[#896170] hover:text-red-500 transition-colors">
                                                    <span class="material-symbols-outlined text-xs">close</span>
                                                </button>
                                    </div>
                                </div>
                                <p class="text-xs text-[#896170] leading-relaxed">
                                    <%= notification.message %>
                                </p>
                                <% if (!notification.is_read) { %>
                                    <div class="flex items-center justify-between mt-2">
                                        <span class="text-[10px] text-gray-400">
                                            <%= timeAgo(notification.created_at) %>
                                        </span>
                                        <button onclick="markAsRead('<%= notification.id %>')"
                                            class="text-[10px] text-primary hover:underline font-bold">تحديد
                                            كمقروء</button>
                                    </div>
                                    <% } else { %>
                                        <span class="text-[10px] text-gray-400 mt-2 block">
                                            <%= timeAgo(notification.created_at) %>
                                        </span>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div class="text-center py-10 text-[#896170]">
                                <div
                                    class="bg-gray-50 dark:bg-[#1a0c10] w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <span class="material-symbols-outlined text-3xl opacity-30">notifications_off</span>
                                </div>
                                <p class="text-sm font-medium">لا توجد إشعارات جديدة حالياً</p>
                            </div>
                            <% } %>
        </div>
    </div>
</div>

<script>
    function openNotifications() {
        const modal = document.getElementById('notificationsModal');
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
    }

    function closeNotifications() {
        const modal = document.getElementById('notificationsModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        document.body.style.overflow = '';
    }

    async function markAllNotificationsAsRead() {
        try {
            const response = await fetch('/notifications/mark-all-read', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });
            if (response.ok) {
                location.reload();
            }
        } catch (error) {
            console.error('Error marking notifications as read:', error);
        }
    }

    async function markAsRead(id) {
        try {
            const response = await fetch(`/notifications/mark-read/${id}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });
            if (response.ok) {
                location.reload();
            }
        } catch (error) {
            console.error('Error marking notification as read:', error);
        }
    }

    async function deleteNotification(id) {
        try {
            const response = await fetch(`/notifications/delete/${id}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });
            if (response.ok) {
                location.reload();
            }
        } catch (error) {
            console.error('Error deleting notification:', error);
        }
    }
</script>