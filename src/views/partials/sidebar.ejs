            <span
                class="absolute top-1 right-1 h-2.5 w-2.5 bg-red-500 rounded-full border-2 border-white dark:border-[#2d1a22]"></span>
            <% } %>
    </button>
    <%- include('./theme-toggle') %>
</div>

